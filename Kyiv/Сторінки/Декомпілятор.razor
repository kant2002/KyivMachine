                "ТестОЗУ",
                "ТестУстройстваУправления",
                "усовершенствованній метод Гаусса - обратный ход",
                "усовершенствованній метод Гаусса",
            ];
            string[] підпрограмиАнглійська = 
            [
                "conjugate gradient method algorithm",
                "Command Switch",
                "Number input subroutine",
                "Subroutine of addition type operations",
                "Subroutine of multiplication type operations",
                "Subroutine of printing",
                "Special constants",
                "Arithmetic device test",
                "Magnetic drum test",
                "RAM test",
                "Control device test",
                "Improved Gaussian method - backward pass",
