            ];
        }
        <InputSelect @bind-Value="ВаріантПідпрограм" class="form-control">
            <option value="">
                @Ресурси.ВаріантВиберітьПідпрограмму
            </option>
            @for (var i = 0; i < підпрограми.Length; i++)
            {
                var значення = підпрограми[i];
                var текст = (CultureInfo.CurrentUICulture.Name == "uk-UA") ? значення : підпрограмиАнглійська[i];
                <option checked="@(ВаріантПідпрограм == значення)"
                        value="@значення">
                    @текст
                </option>
            }
        </InputSelect>
        <label>
            @Ресурси.МіткаПочатковаАдреса <small>(@Ресурси.ПідказкаПочатковаАдреса)</small>
            <InputNumber @bind-Value="ПочатковаАдреса" size="4" class="form-control" />
        </label>
        <label>
            @Ресурси.МіткаКількістьСлів
            <InputNumber @bind-Value="КількістьСлів" size="4" class="form-control" />
        </label>

        <button type="button" title="@Ресурси.ПідказкаЗавантажити" class="btn btn-primary" @onclick=Завантажити>
            @Ресурси.КнопкаЗавантажити
        </button>
        <p>@Ресурси.ПідказкаВиберітьПідпрограму</p>
    </div>
    <div class="col order-md-1">
        <h3>@Ресурси.МіткаЛістінгС</h3>
<div style="white-space: pre">
            @((MarkupString)ДекомпільованаКоманда)
</div>
    </div>
</div>

